{
    "manifest_version": 2,

    "name": "Motion United",
    "description": "This extension allows for browser manipulation through motion detection.",
    "version": "1.0",

    "permissions": [
        "background",
        "bookmarks",
        "clipboardRead",
        "clipboardWrite",
        "contentSettings",
        "contextMenus",
        "cookies",
        "debugger",
        "history",
        "idle",
        "management",
        "notifications",
        "pageCapture",
        "tabs",
        "topSites",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_icon": "popup/icon.png"
    },
    "web_accessible_resources":[
        "lib/jquery-2.0.3.min.js",
        "lib/jquery-2.0.3.min.map"
    ],
    "content_scripts": [{
        "matches": [ "http://*/*", "https://*/*"],
        "js": [
            "lib/jquery-2.0.3.min.js",
            "popup/broker.js",
            "effects/control_browser.js",
            "detection/motion_gestures.js",
            "detection/button_gestures.js",
            "detection/motion_frame.js"
        ],
        "css": [
            "css/styling.css"
        ]
    }]

}