{
    "manifest_version": 2,

    "name": "Motion United",
    "description": "This extension allows for browser manipulation through motion detection.",
    "version": "1.0",

    "permissions": [
        "background",
        "bookmarks",
        "clipboardRead",
        "clipboardWrite",
        "contentSettings",
        "contextMenus",
        "cookies",
        "debugger",
        "history",
        "idle",
        "management",
        "notifications",
        "pageCapture",
        "tabs",
        "topSites",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*",
        "audioCapture",
        "videoCapture"
],
    "browser_action": {
        "default_icon": "popup/icon.png",
        "default_popup": "popup/index.html"
    }
}