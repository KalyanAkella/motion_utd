{
    "manifest_version": 2,

    "name": "Motion United",
    "description": "This extension allows for browser manipulation through motion detection.",
    "version": "1.0",

    "permissions": [
        "background",
        "bookmarks",
        "clipboardRead",
        "clipboardWrite",
        "contentSettings",
        "contextMenus",
        "cookies",
        "debugger",
        "history",
        "idle",
        "management",
        "notifications",
        "pageCapture",
        "tabs",
        "topSites",
        "webNavigation",
        "webRequest",
        "webRequestBlocking"
],
    "browser_action": {
        "default_icon": "popup/icon.png",
        "default_popup": "popup/index.html"
    },
    "content_scripts": [
        {
            "js": ["lib/jquery-2.0.3.min.js"]
        }
    ]
}